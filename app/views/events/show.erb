<h2>Event Name: <%=@event.name %></h2>
  <ol>
    <li> Genre: <%=@event.genre %> </li>
    <li> Date: <%=@event.date %> </li>
    <li> Time: <%=@event.time %> </li>
    <li> Link: <a href=<%=@event.link %> target="_blank" ><%=@event.link %></a> </li>
    <li> Description: <%=@event.description %> </li>
  </ol>

 
 <% if !!(FavoriteEvent.where(event_id: @event.id, user_id: current_user.id) != []) %> 
    <form action=<%= "/favorite-event/#{@event.id}" %> method="post">
      <input type="hidden" name="_method" value="delete">
      <input type="submit" value=<%= "Unfavorite" %>>
    </form>
 <% else %> 
    <form action=<%="/favorite-event/#{@event.id}" %> method="post">
      <input type="submit" value="Favorite This Event!">
    </form>
  <% end %> 
  


  



  

  <% if session[:user_id] == @event.user_id %>
    <a href=<%= "/events/#{@event.id}/edit" %>>Edit <%= @event.name %></a> 
  <% end %>
