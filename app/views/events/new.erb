<h2>Create a New Event!</h3>

<form action="/new" method="post">
  <label for="name">Event Name:</label>
  <input type="text" name="event[name]">
  <br>
  <label for="genre"> Genre: </label>
  <select name="event[genre]">
    <% Event.create_genres_array%>
    <% Event.all_genres.each do |genre|%>
    <option value="#{genre}"><%=genre%></option>
    <%end%>
  </select>
  <br>
  <label for="date"> Date: </label>
  <input type="date" name="event[date]">
  <br>
  <label for="time">Time: </label>
  <input type="time" name="event[time]">
  <br>
  <label for="text">Link:</label>
  <input type="text" name="event[link]">
  <br>
  <label for="description">Description:</label>
  <input type="textarea" name="event[descriptin]">
  <br>
  <br>
  <input type="submit" value="Create Event!">
</form>